# --- Editors ---
export EDITOR=nvim
export VISUAL=$EDITOR
export GIT_EDITOR="$EDITOR"

# --- FZF defaults ---
export FZF_DEFAULT_COMMAND='fd --type file'
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"

# --- Language/tooling env ---
# Elixir/Erlang
export KERL_BUILD_DOCS="yes"
export ERL_AFLAGS="-kernel shell_history enabled"

# Go
export GOPATH=$HOME/go
export GOPROXY=direct

# Shell path
export SHELL=/bin/zsh

export HELIX_RUNTIME=$HOME/Developer/helix/runtime

# Use zsh's path array and dedupe to avoid duplicates and keep order
typeset -U path
path=(
  /opt/homebrew/bin
  $HOME/bin
  /usr/local/bin
  $HOME/go/bin
  $HOME/.cargo/bin
  $HOME/.bun/bin
  $HOME/.local/share/nvim/mason/bin
  $HOME/.opencode/bin
  $HOME/.local/bin
  $path
)

# Homebrew-provided client CLIs (if installed)
if command -v brew >/dev/null 2>&1; then
  if [ -d "$(brew --prefix)/opt/libpq/bin" ]; then
    path=("$(brew --prefix)/opt/libpq/bin" $path)
  fi
  if [ -d "$(brew --prefix)/opt/mysql-client/bin" ]; then
    path=("$(brew --prefix)/opt/mysql-client/bin" $path)
  fi
fi

export PATH

export OPENCODE_DISABLE_AUTOCOMPACT=1

# --- Aliases ---
alias ls="eza --icons=always"
alias lg=lazygit
alias chez=chezmoi

autoload -Uz compinit; compinit

export ZSH_CACHE_DIR=$HOME/.cache/zsh

source "$HOME/.zsh/completion.zsh"
source "$HOME/.zsh/history.zsh"

source "$HOME/.zsh/brew.plugin.zsh"
source "$HOME/.zsh/bun.plugin.zsh"
source "$HOME/.zsh/chezmoi.plugin.zsh"
source "$HOME/.zsh/fzf.plugin.zsh"
source "$HOME/.zsh/gh.plugin.zsh"
source "$HOME/.zsh/git.plugin.zsh"
source "$HOME/.zsh/history.plugin.zsh"
source "$HOME/.zsh/mise.plugin.zsh"
source "$HOME/.zsh/zoxide.plugin.zsh"

fpath=(
  $HOME/.zsh
  $HOME/.cache/zsh/completions
  $fpath
)

source "$HOME/.zsh/fast-syntax-highlighting/fast-syntax-highlighting.plugin.zsh"

# Ensure history navigation works in subshells
autoload -z edit-command-line
zle -N edit-command-line
bindkey '^P' up-line-or-history
bindkey '^N' down-line-or-history

eval "$(direnv activate)"
eval "$(starship init zsh)"

# --- Local overrides ---
[ -f "$HOME/.zshrc.local" ] && . "$HOME/.zshrc.local"
