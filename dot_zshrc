# --- Editors ---
export EDITOR=hx
export VISUAL=$EDITOR
export GIT_EDITOR="$EDITOR"

# --- FZF defaults ---
export FZF_DEFAULT_COMMAND='fd --type file'
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"

# --- Language/tooling env ---
# Elixir/Erlang
export KERL_BUILD_DOCS="yes"
export ERL_AFLAGS="-kernel shell_history enabled"

# Go
export GOPATH=$HOME/go
export GOPROXY=direct

# Shell path
export SHELL=/bin/zsh

# Use zsh's path array and dedupe to avoid duplicates and keep order
typeset -U path
path=(
  /opt/homebrew/bin
  $HOME/bin
  /usr/local/bin
  $HOME/go/bin
  $HOME/.cargo/bin
  $HOME/.bun/bin
  $HOME/.local/share/nvim/mason/bin
  $HOME/.opencode/bin
  $HOME/.local/bin
  $path
)

# Homebrew-provided client CLIs (if installed)
if command -v brew >/dev/null 2>&1; then
  if [ -d "$(brew --prefix)/opt/libpq/bin" ]; then
    path=("$(brew --prefix)/opt/libpq/bin" $path)
  fi
  if [ -d "$(brew --prefix)/opt/mysql-client/bin" ]; then
    path=("$(brew --prefix)/opt/mysql-client/bin" $path)
  fi
fi

# --- Completion and FPATH ---
# Prepare for compinit and completions later
autoload -U +X compinit

# Cache completion if nothing changed - faster startup time
# Rebuild daily to pick up new completions
typeset -i updated_at=$(date +'%j' -r ~/.zcompdump 2>/dev/null || stat -f '%Sm' -t '%j' ~/.zcompdump 2>/dev/null)
if [ $(date +'%j') != $updated_at ]; then
  compinit -i
else
  compinit -C -i
fi


# --- Zsh plugins ---
export ZSH_CACHE_DIR="$HOME/.cache/zsh"

source "$HOME/.zsh/dotenv.plugin.zsh"

# Warp-specific handling
if [ "$TERM_PROGRAM" = "WarpTerminal" ]; then
  [[ "$-" == *i* ]] && printf '\eP$f{"hook": "SourcedRcFileForWarp", "value": { "shell": "zsh", "uname": "'"$(uname)"'" }}\x9c'
fi

# --- Aliases ---
alias ls="eza --icons=always"
alias lg=lazygit
alias chez=chezmoi

# --- Tool integrations ---
if command -v ~/.local/bin/mise >/dev/null 2>&1; then
  eval "$(~/.local/bin/mise activate zsh)"
fi

if command -v zoxide >/dev/null 2>&1; then
  eval "$(zoxide init zsh)"
fi

# --- Local overrides ---
[ -f "$HOME/.zshrc.local" ] && . "$HOME/.zshrc.local"
