export NVM_DIR="$HOME/.nvm"

export FZF_DEFAULT_COMMAND='fd --type file'
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"

export EDITOR=nvim
export VISUAL=$EDITOR
export GIT_EDITOR=$EDITOR

export GOPATH=$HOME/go
PATH=$HOME/bin:$PATH
PATH=/usr/local/bin:$PATH
PATH=/usr/local/sbin:$PATH
PATH=/opt/homebrew/bin:$PATH
PATH="/opt/homebrew/opt/openjdk@11/bin:$PATH"
PATH="/opt/homebrew/opt/postgresql@13/bin:$PATH"
PATH="/opt/homebrew/opt/python@3.11/libexec/bin:$PATH"
PATH=$GOPATH/bin:$PATH
PATH=$HOME/zig/bin:$PATH
PATH=$HOME/.cargo/bin:$PATH
export PATH=$PATH
export SHELL=/bin/zsh

export GOPROXY=direct
export GOSUMDB=off

source $HOME/.zsh/history.zsh
source $HOME/.zsh/key-bindings.zsh
source $HOME/.zsh/fast-syntax-highlighting/fast-syntax-highlighting.plugin.zsh
source $HOME/.zsh/zsh-autosuggestions/zsh-autosuggestions.zsh

source $HOME/.zsh/completion.zsh
autoload -Uz compinit

# Cache completion if nothing changed - faster startup time
typeset -i updated_at=$(date +'%j' -r ~/.zcompdump 2>/dev/null || stat -f '%Sm' -t '%j' ~/.zcompdump 2>/dev/null)
if [ $(date +'%j') != $updated_at ]; then
  compinit -i
else
  compinit -C -i
fi

# Enhanced form of menu completion called `menu selection'
zmodload -i zsh/complist

alias ls=eza
alias vi=nvim
alias nv=$EDITOR

alias chez=chezmoi
alias lg=lazygit

alias ta='tmux attach -t'
alias ts='tmux new-session -s'
alias tl='tmux list-sessions'

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# source ~/.zshrc.local
[ -s "$HOME/.zshrc.local" ] && \. "$HOME/.zshrc.local"

alias luamake=/Users/gamurray/Code/lua-language-server/3rd/luamake/luamake

# git
alias g=git
alias gi=git
alias ga='git add'
alias gaa='git add -A'
alias gbd='git branch -d'
alias gpu='git push -u'

alias fanauth='TERM=xterm-256color fanauth'
alias ssh='TERM=xterm-256color ssh'
alias mods='mods -m gpt-3.5-turbo'
alias tm=tmux-sessions

bindkey '^f' autosuggest-accept

fpath+=($HOME/.zsh/pure)
autoload -U promptinit
promptinit
prompt pure

eval "$(zoxide init zsh)"
