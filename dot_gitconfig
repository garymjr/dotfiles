[user]
  name = Gary Murray
  email = garymjr@gmail.com
[includeIf "gitdir:~/fanatics/"]
  path = ~/.config/git/fanatics.config
[core]
  excludesFile = ~/.config/git/ignore
[merge]
  conflictstyle = diff3
[pull]
  rebase = true
[branch]
  autosetupmerge = always
  autosetuprebase = always
[alias]
  a = add
  aa = add -A
  b = branch
  bd = !git branch -d $(git branch | grep -v '^*\\|master' | fzf --height ${FZF_TMUX_HEIGHT:-20%} --reverse --no-separator --multi)
  c = commit -v
  ca = commit -v --amend
  co = checkout
  f = fetch --prune
  fix = commit --fixup
  l = log --graph --all --pretty=format:\"%C(yellow)%h%Cblue%d %Creset%s %C(green)%cr%Creset (%C(magenta)%an%Creset)\"
  ll = log --graph --pretty=format:\"%C(yellow)%h%Cblue%d %Creset%s %C(green)%cr%Creset (%C(magenta)%an%Creset)\"
  lo = log --oneline
  lx = log --pretty=format:\"%s\"
  p = pull
  pu = !git branch --show-current | xargs git push origin
  puf = !git branch --show-current | xargs git push --force-with-lease origin
  puo = !git branch --show-current | xargs git push -u origin
  ras = rebase -i --autosquash
  s = status
  so = spinoff
  squash = commit --squash
  st = stash
  sw = switch
[safe]
	directory = /Users/gamurray/code/neovim
