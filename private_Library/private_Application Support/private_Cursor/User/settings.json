{
    "window.commandCenter": true,
    "workbench.colorTheme": "Ros√© Pine Moon (no italics)",
    "editor.fontSize": 16,
    "editor.fontFamily": "MonaspiceAr Nerd Font",
    "editor.cursorBlinking": "solid",
    "editor.cursorSurroundingLines": 5,
    "editor.formatOnType": true,
    "vim.normalModeKeyBindings": [
        {
            "before": ["K"],
            "after": ["g", "h"]
        },
        {
            "before": ["g", "r"],
            "commands": ["editor.action.goToReferences"]
        },
        {
            "before": ["g", "d"],
            "commands": ["editor.action.revealDefinition"]
        },
        {
            "before": ["g", "Y"],
            "commands": ["editor.action.goToTypeDefinition"]
        }
    ],
    "editor.renderLineHighlight": "none",
    "window.restoreFullscreen": true,
    "window.newWindowDimensions": "fullscreen",
    "git.confirmSync": false,
    "git.autofetch": true,
    "cursor.aipreview.enabled": true,
    "cursor.chat.premiumChatAutoScrollWhenAtBottom": true,
    "cursor.chat.showSuggestedFiles": true,
    "cursor.chat.smoothStreaming": true,
    "cursor.cmdk.useThemedDiffBackground": true,
    "elixirLS.suggestSpecs": false,
    "workbench.iconTheme": "rose-pine-icons",
    "vim.mouseSelectionGoesIntoVisualMode": false
}