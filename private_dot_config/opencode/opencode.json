{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "autoupdate": true,
  "permission": {
    "bash": {
      "*": "allow",
      "wget *": "ask",
      "rm *": "ask",
      "mv *": "ask",
      "source *": "ask",
      "eval *": "ask",
      "curl *": "ask",
      "zsh *": "ask",
      "sh *": "ask",
      "fish *": "ask",
      "bash *": "ask",
      "gh *": "ask",
      "acli *": "ask",
      "psql *": "ask",
      "sqlite3 *": "ask",
      "mysql *": "ask",
      "supabase *": "ask",
      "bunx supabase *": "ask",
      "npx supabase *": "ask",
      "bunx convex *": "ask",
      "npx convex *": "ask",
      "pkill *": "ask",
      "brew *": "ask",
      "railway *": "ask"
    }
  },
  "mcp": {},
  "keybinds": {
    "leader": "ctrl+x",
    "app_help": "<leader>h",
    "app_exit": "ctrl+c,<leader>q",
    "editor_open": "<leader>e",
    "theme_list": "<leader>t",
    "project_init": "<leader>i",
    "tool_details": "<leader>d",
    "thinking_blocks": "<leader>b",
    "session_export": "<leader>x",
    "session_new": "<leader>n",
    "session_list": "<leader>l",
    "session_share": "<leader>s",
    "session_unshare": "none",
    "session_interrupt": "esc",
    "session_compact": "<leader>c",
    "session_child_cycle": "ctrl+]",
    "session_child_cycle_reverse": "ctrl+[",
    "messages_page_up": "alt+k",
    "messages_page_down": "alt+j",
    "messages_half_page_up": "alt+u",
    "messages_half_page_down": "alt+d",
    "messages_first": "ctrl+g",
    "messages_last": "ctrl+shift+g",
    "messages_copy": "<leader>y",
    "messages_undo": "<leader>u",
    "messages_redo": "<leader>r",
    "model_list": "<leader>m",
    "agent_list": "<leader>a",
    "agent_cycle": "tab",
    "agent_cycle_reverse": "shift+tab",
    "input_clear": "ctrl+c",
    "input_paste": "ctrl+v",
    "input_submit": "enter",
    "input_newline": "shift+enter,ctrl+j"
  }
}
