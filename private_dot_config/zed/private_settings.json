{
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-5-sonnet"
    },
    "version": "2",
    "enabled": true,
    "button": true,
    "dock": "right",
    "enable_experimental_live_diffs": true
  },
  "buffer_font_family": "Monaspace Neon",
  "buffer_font_size": 18,
  "buffer_font_features": {
    "calt": true,
    "ss01": true,
    "ss02": true,
    "ss03": true,
    "ss05": true,
    "ss06": true,
    "ss07": true,
    "ss09": true
  },
  "current_line_highlight": "none",
  "cursor_blink": false,
  "experimental.theme_overrides": {
    // "panel.focused_border": "#eabcba"
    "syntax": {
      "keyword": {
        "color": "#5de4c7"
      },
      "type": {
        "color": "#add7ff"
      }
    },
    "players": [
      {
        "cursor": "#e0def4",
        "background": "#e0def4",
        "selection": "#e0def422"
      },
      {
        "cursor": "#9ccfd8",
        "background": "#9ccfd8",
        "selection": "#9ccfd844"
      },
      {
        "cursor": "#c4a7e7",
        "background": "#c4a7e7",
        "selection": "#c4a7e744"
      },
      {
        "cursor": "#31748f",
        "background": "#31748f",
        "selection": "#31748f44"
      },
      {
        "cursor": "#eb6f92",
        "background": "#eb6f92",
        "selection": "#eb6f9244"
      }
    ]
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "file_types": {
    "Dockerfile": ["Dockerfile", "dockerfile.*"],
    "JSON": ["json", "jsonc", "*.code-snippets"]
  },
  "git_panel": {
    "button": true,
    "dock": "right"
  },
  "gutter": {
    "code_actions": false
  },
  "indent_guides": {
    "enabled": false
  },
  "language_servers": [
    // "eslint",
    "!typescript-language-server",
    "!lexical",
    "!next-ls",
    "..."
  ],
  "lsp": {
    "copilot": {
      "initialization_options": {
        "copilotIntegrationId": "vscode-chat"
      },
      "settings": {
        "github": {
          "copilot": {
            "selectedCompletionModel": "gpt-4o-copilot"
          }
        }
      }
    }
  },
  "outline_panel": {
    "button": false,
    "dock": "right",
    "indent_size": 10
  },
  "pane_split_direction_horizontal": "down",
  "pane_split_direction_vertical": "right",
  "project_panel": {
    "indent_size": 10
  },
  "relative_line_numbers": true,
  "restore_on_startup": "none",
  "slash_commands": {
    "docs": {
      "enabled": true
    },
    "project": {
      "enabled": true
    }
  },
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show": true
  },
  "tabs": { "file_icons": true },
  "toolbar": {
    "quick_actions": false
  },
  "terminal": {
    "button": false,
    "font_family": "Monaspace Neon"
  },
  "theme": {
    "mode": "dark",
    "light": "Nebula Glow",
    "dark": "poimandres (no italics)"
  },
  "ui_font_family": "Zed Plex Sans",
  "ui_font_size": 18,
  "use_autoclose": false,
  "use_smartcase_search": true,
  "use_system_path_prompts": false,
  "vim_mode": true,
  "when_closing_with_no_tabs": "close_window"
}
